/* styles.qss */
QMainWindow {
    background-color: #f0f0f0;
}

QPushButton {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #0056b3;
}

QLabel {
    font-size: 14px;
    color: #333;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 5px;
}

QLineEdit:focus {
    border: 1px solid #007bff;
}